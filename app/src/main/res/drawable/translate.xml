<animated-vector xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt">

    <aapt:attr name="android:drawable">
        <vector
            android:width="360dp"
            android:height="200dp"
            android:viewportHeight="200"
            android:viewportWidth="360">

            <path
                android:name="one_1"
                android:pathData="@string/path_one_google_io"
                android:strokeColor="@color/pink_500"
                android:strokeWidth="@dimen/hashtag_stroke_width"
                android:trimPathEnd="0.25"
                android:trimPathStart="0" />

            <path
                android:name="one_2"
                android:pathData="@string/path_one_google_io"
                android:strokeColor="@color/cyan_a100"
                android:strokeWidth="@dimen/hashtag_stroke_width"
                android:trimPathEnd="0"
                android:trimPathStart="0.25" />
        </vector>
    </aapt:attr>

    <target
        android:name="one_1"
        android:animation="@animator/handwriting_16_offset_trim_one" />

    <target
        android:name="one_2"
        android:animation="@animator/handwriting_16_offset_trim_one" />

</animated-vector>
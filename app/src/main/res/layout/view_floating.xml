<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/floating_sv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:overScrollMode="never">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="#80CD0000"/>

        <WebView
            android:id="@+id/floating_wv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="25dp"/>

        <TextView
            android:id="@+id/floating_11_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#90FFFFFF"
            android:paddingLeft="5dp"
            android:text="\n##答题辅助助手悬浮窗"
            android:textColor="#FF0000FF"
            android:layout_alignParentBottom="true"
            android:paddingBottom="20dp"
            android:textSize="15sp"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/floating_22_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FF0000FF"
            android:layout_alignTop="@+id/floating_11_tv"
            android:layout_alignParentRight="true"
            android:text="##答题辅助助手悬浮窗"
            android:layout_marginTop="30dp"
            android:textSize="15sp"
            android:layout_marginRight="20dp"
            android:visibility="visible"/>
    </RelativeLayout>

</ScrollView>
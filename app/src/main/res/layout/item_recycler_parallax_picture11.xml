<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <com.example.myapplication.widget.ParallaxImageView11
        android:id="@+id/item_iv"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:scaleType="matrix"
        android:src="@drawable/welcome_thirdly"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/item_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:text="如何置顶公众号"
        android:textSize="16dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/item_desc_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_title_tv"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:text="点击右侧头角，选择置顶公众号；点击右侧头角，选择置顶公众号；点击右侧头角，选择置顶公众号；点击右侧头角，选择置顶公众号；点击右侧头角，选择置顶公众号；"/>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/loading_view"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:gravity="center"
    android:orientation="vertical">

    <ViewStub
        android:id="@+id/footer_loading_viewStub"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout="@layout/recycler_footer_loading" />

    <ViewStub
        android:id="@+id/footer_end_viewStub"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout="@layout/recycler_footer_end" />

    <ViewStub
        android:id="@+id/footer_error_viewStub"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout="@layout/recycler_footer_error" />

</LinearLayout>
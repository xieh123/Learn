<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CircleImageView">
        <attr name="border_width" format="dimension" />
        <attr name="border_color" format="color" />
        <attr name="border_overlay" format="boolean" />
    </declare-styleable>

    <declare-styleable name="StateButton">
        <!--text color-->
        <attr name="normalTextColor" format="color|reference" />
        <attr name="pressedTextColor" format="color|reference" />
        <attr name="unableTextColor" format="color|reference" />

        <!--stroke width and color, dash width, dash gap-->
        <attr name="strokeDashWidth" format="dimension|reference" />
        <attr name="strokeDashGap" format="dimension|reference" />
        <attr name="normalStrokeWidth" format="dimension|reference" />
        <attr name="pressedStrokeWidth" format="dimension|reference" />
        <attr name="unableStrokeWidth" format="dimension|reference" />
        <attr name="normalStrokeColor" format="color|reference" />
        <attr name="pressedStrokeColor" format="color|reference" />
        <attr name="unableStrokeColor" format="color|reference" />

        <!--background color-->
        <attr name="normalBackgroundColor" format="color|reference" />
        <attr name="pressedBackgroundColor" format="color|reference" />
        <attr name="unableBackgroundColor" format="color|reference" />

        <!--background radius-->
        <attr name="radius" format="dimension|reference" />
        <attr name="round" format="boolean|reference" />

        <!--animation duration-->
        <attr name="animationDuration" format="integer|reference" />
    </declare-styleable>


    <!-- 自定义属性 -->
    <attr name="backgroundColor" format="reference|color" />
    <attr name="toolbarColor" format="reference|color" />
    <attr name="buttonColor" format="reference|color" />
    <attr name="textColor" format="reference|color" />

    <declare-styleable name="StencilView">
        <attr name="sv_strokeWidth" format="float" />
        <attr name="sv_strokeColor" format="color|reference" />
        <attr name="sv_textSize" format="dimension|reference" />
        <attr name="sv_text" format="string|reference" />
    </declare-styleable>


    <declare-styleable name="GifView">
        <attr name="gif" format="reference" />
        <attr name="paused" format="boolean" />
    </declare-styleable>


    <declare-styleable name="SwitchView">
        <attr name="normal_color" format="color" />
        <attr name="select_color" format="color" />
        <attr name="ball_color" format="color" />
    </declare-styleable>


    <!--收起展开 textView-->
    <declare-styleable name="ExpandableTextView">
        <attr name="maxCollapsedLines" format="integer" />
        <attr name="animDuration" format="integer" />
        <attr name="expandDrawable" format="reference" />
        <attr name="collapseDrawable" format="reference" />
        <attr name="contentTextColor" format="color" />
        <attr name="collapseExpandTextColor" format="color" />
        <attr name="contentTextSize" format="dimension" />
        <attr name="collapseExpandTextSize" format="dimension" />
        <attr name="textCollapse" format="string" />
        <attr name="textExpand" format="string" />
        <attr name="collapseExpandGravity">
            <flag name="left" value="3" />
            <flag name="right" value="5" />
        </attr>
        <attr name="drawableGravity">
            <flag name="left" value="3" />
            <flag name="right" value="5" />
        </attr>
    </declare-styleable>


    <declare-styleable name="FlowLayout">
        <attr name="verticalSpace" format="dimension|reference" />
        <attr name="horizontalSpace" format="dimension|reference" />
    </declare-styleable>

    <declare-styleable name="StateTextView">
        <!-- 圆角矩形背景色 -->
        <!-- <attr name="normalBackgroundColor" format="color|reference" /> -->

        <attr name="normalBackgroundColor" />
        <!-- 圆角半径,单位dp-->
        <attr name="cornerRadius" format="dimension" />
        <!-- 圆角弧度,单位dp-->
        <attr name="strokeWidth" format="dimension" />
        <!-- 圆角边框颜色-->
        <attr name="strokeColor" format="color" />
        <!-- 圆角弧度是高度一半-->
        <attr name="isRadiusHalfHeight" format="boolean" />
        <!-- 圆角矩形宽高相等,取较宽高中大值-->
        <attr name="isWidthHeightEqual" format="boolean" />
    </declare-styleable>


    <declare-styleable name="ShimmerLayout">
        <attr name="shimmer_color" format="color|reference"/>
        <attr name="shimmer_animation_duration" format="integer|reference"/>
        <attr name="shimmer_auto_start" format="boolean|reference"/>
    </declare-styleable>

</resources>